<body>

    <div id="score">คะแนน: 0</div>
    
    <div class="game-area">
        <div id="dino"></div>
        <div id="cactus" class="cactus"></div>
        <div id="game-over">Game Over!</div>
    </div>

    <div class="controls">
        <button id="jump-button">กระโดด!</button>
        <button id="restart-button">เล่นใหม่</button>
        <a href="index.html" class="controls button red">กลับเมนูหลัก</a>
    </div>

    <script>
        // -------------------- JavaScript สำหรับเกม Dino Jump --------------------
        const dino = document.getElementById('dino');
        const cactus = document.getElementById('cactus');
        const scoreDisplay = document.getElementById('score');
        const gameOverDisplay = document.getElementById('game-over');
        const jumpButton = document.getElementById('jump-button');
        const restartButton = document.getElementById('restart-button');

        let score = 0;
        let isGameOver = false;
        let cactusSpeed = 2000; // ความเร็วเริ่มต้นของกระบองเพชร (ms)
        let gameInterval;
        let collisionDetectionInterval;

        // ฟังก์ชันกระโดด
        function jump() {
            if (!isGameOver && !dino.classList.contains('jump')) {
                dino.classList.add('jump');
                setTimeout(() => {
                    dino.classList.remove('jump');
                }, 600); // ต้องเท่ากับ animation duration ของ jump
            }
        }

        // ฟังก์ชันตรวจจับการชน
        function checkCollision() {
            const dinoRect = dino.getBoundingClientRect();
            const cactusRect = cactus.getBoundingClientRect();

            // ตรวจสอบว่าชนกันหรือไม่
            if (
                dinoRect.left < cactusRect.right &&
                dinoRect.right > cactusRect.left &&
                dinoRect.top < cactusRect.bottom &&
                dinoRect.bottom > cactusRect.top &&
                dinoRect.bottom > 0 // ตรวจสอบว่าไดโนยังอยู่บนพื้น (ไม่ได้กระโดดสูงเกิน)
            ) {
                gameOver();
            }
        }

        // ฟังก์ชันเมื่อเกมโอเวอร์
        function gameOver() {
            isGameOver = true;
            gameOverDisplay.style.display = 'block';
            clearInterval(gameInterval); // หยุดการเคลื่อนที่ของกระบองเพชร
            clearInterval(collisionDetectionInterval); // หยุดการตรวจจับการชน
            cactus.style.animationPlayState = 'paused'; // หยุด animation ของกระบองเพชร
            alert(`เกมจบแล้ว! คะแนนของคุณ: ${score}`); // แจ้งคะแนน
        }

        // ฟังก์ชันรีเซ็ตเกม
        function resetGame() {
            isGameOver = false;
            score = 0;
            scoreDisplay.textContent = 'คะแนน: 0';
            gameOverDisplay.style.display = 'none';
            cactus.style.animationPlayState = 'running';
            cactus.style.animationDuration = `${cactusSpeed / 1000}s`; // รีเซ็ตความเร็ว
            startGame(); // เริ่มเกมใหม่
        }

        // ฟังก์ชันเริ่มเกม
        function startGame() {
            if (isGameOver) resetGame();

            // เพิ่มคะแนนทุก 100ms
            gameInterval = setInterval(() => {
                if (!isGameOver) {
                    score++;
                    scoreDisplay.textContent = `คะแนน: ${score}`;
                }
            }, 100);

            // ตรวจจับการชนทุก 10ms
            collisionDetectionInterval = setInterval(checkCollision, 10);
        }

        // Event Listeners
        document.addEventListener('keydown', (event) => {
            if (event.code === 'Space' || event.code === 'ArrowUp') {
                jump();
            }
        });
        jumpButton.addEventListener('click', jump);
        restartButton.addEventListener('click', resetGame);

        // เริ่มเกมเมื่อโหลดหน้า
        startGame();

    </script>
</body>
</html>
